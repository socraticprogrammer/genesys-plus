{
  "name": "genesys-plus",
  "version": "0.0.0",
  "description": "Application extends functions currently present in Genesys Cloud.",
  "main": "src/main/index.ts",
  "private": "true",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/socraticprogrammer/genesys-plus#readme",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "javascript",
    "jest",
    "typescript",
    "js",
    "ts"
  ],
  "author": {
    "name": "Thalles Lossurdo",
    "email": "thallesgabriel1307@gmail.com",
    "url": "https://bit.ly/thalles-lossurdo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/socraticprogrammer/genesys-plus.git"
  },
  "bugs": {
    "url": "https://github.com/socraticprogrammer/genesys-plus/issues",
    "email": "thallesgabriel1307@gmail.com"
  },
  "scripts": {
    "start": "node dist/src/main/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --clear --exit-child --rs --no-notify .",
    "build": "rimraf dist && tsc -p tsconfig-build.json && resolve-tspaths",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w && resolve-tspaths",
    "check": "npm-check -u",
    "check:production": "npm-check -u -p",
    "editorconfig": "editorconfig-checker",
    "style": "prettier --ignore-path .gitignore --check **/*.ts",
    "style:fix": "prettier --ignore-path .gitignore --write **/*.ts",
    "lint": "eslint --ignore-path .gitignore src tests --ext .ts",
    "lint:fix": "eslint --ignore-path .gitignore src --ext .ts --fix",
    "test": "jest --passWithNoTests --noStackTrace --runInBand --no-cache --testTimeout=10000",
    "test:ci": "pnpm test -- --coverage --silent",
    "test:unit": "pnpm test -- -c jest-unit-config.js",
    "test:unit:watch": "pnpm test -- --watch  --findRelatedTests tests -c jest-unit-config.js",
    "test:integration": "pnpm test -- --watch -c jest-integration-config.js",
    "test:staged": "pnpm test -- --findRelatedTests tests",
    "husky": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "editorconfig-checker": "^5.1.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "npm-check": "^6.0.1",
    "prettier": "^3.0.3",
    "resolve-tspaths": "^0.8.15",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "yarn": ">=1.22.x",
    "pnpm": ">=7"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "purecloud-platform-client-v2": "^173.1.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  }
}

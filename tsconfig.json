{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "build/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@/**/*": ["./src/**/*"]
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["**/*.spec.ts"]
}
